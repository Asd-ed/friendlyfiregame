{
    "$schema": "https://json.schemastore.org/tslint#",
    "defaultSeverity": "error",
    "rules": {
        "class-name": true,
        "encoding": true,
        "eofline": true,
        "quotemark": {
            "options": ["double"]
        },
        "semicolon": {
            "options": ["always"]
        },
        "triple-equals": {
            "options": ["allow-null-check"]
        },
        "whitespace": {
            "options": [
                "check-branch",
                "check-module",
                "check-operator",
                "check-type"
            ]
        }
    }
}
